@model BlogVM

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Images
        </dt>
        <dd class="col-sm-10">
            <div class="row images my-4">
                @foreach (var image in Model.AllImages)
                {
                    <div class="col-2">
                        <div class="card" style="width:152px">
                            <img style="width:150px;height:150px;object-fit:cover" src="~/assets/image/BlogImages/@image.ImagePath" class="card-img-top @(image.IsMain == true ? "main" : "")" />
                        </div>
                        <input type="text" hidden name="ImagesId" value="@image.Id" />
                    </div>
                }

            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TitleCard)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TitleCard)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CardTitleDetail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CardTitleDetail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TextContent)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.TextContent)
        </dd>


    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

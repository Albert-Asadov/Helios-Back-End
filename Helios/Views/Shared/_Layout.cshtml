@inject Helios.Service.LayoutService _layoutServices

@{
    List<Category> categories = _layoutServices.AllCategories();
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/style.css">
    @RenderSection("CSS", false)
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="Home">
        <div id="leftSides" class="d-lg-block d-md-none d-none" style="width: 351px; border-right: 1px solid #232323;">
            <div class="content">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index">
                        <div class="mainLogo">
                            <img src="../../assets/image/HeliosMainLogoSvg.svg" alt="">
                        </div>
                        <div class="secondaryLogo">
                            <img src="../../assets/image/Frame 39heliosUISVG Logo.svg" alt="">
                        </div>
                    </a>
                </div>
                <nav>
                    <ul>
                        <a asp-controller="Home" asp-action="Index" class="hoverGray activeHoverLiSubMenu">
                        <li>
                            Home
                        </li>
                        </a>
                        <a asp-controller="Introduction" asp-action="Index" class="hoverGray">
                        <li>
                            Introduction
                        </li>
                        </a>
                        <a asp-controller="Blog" asp-action="Index" class="hoverGray">
                        <li>
                            Blog
                        </li>
                        </a>
                        <a asp-controller="Styles" asp-action="Index" class="hoverGray">
                        <li>
                            Styles
                        </li>
                        </a>
                        <li class="component">
                            <div class="accordion">
                                <div class="accordion-item">
                                    <div class="accordion-header">
                                        Components

                                        <img src="../../assets/image/Mask.svg" alt="">
                                    </div>

                                    <div class="accordion-content">
                                        <ul>
                                            <li class="hoverActive">
                                                WEB
                                            </li>
                                            <li class="hoverActive">
                                                IOS
                                                <div class="buttonNavPlanned">
                                                    <a href="">
                                                        Planned
                                                    </a>
                                                </div>
                                            </li>
                                            <li class="hoverActive">
                                                Android
                                                <div class="buttonNavPlanned">
                                                    <a href="">
                                                        Planned
                                                    </a>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>


        <div id="subMenu">
            <ul>
                @foreach (var item in categories)
                    {
                        var isActive = item.Id == ViewBag.categoryId;
                    <a asp-controller="Component" asp-action="Index" asp-route-categoryId="@item.Id"  >
                         <li class="hoverColorSubMenu  @((isActive && ViewBag.categoryId == item.Id) ? "activeHoverLiSubMenu" : "")">@item.Name</li>
                    </a>
                }
            </ul>
        </div>


        @RenderBody()
    </div>

    @RenderSection("Script", false)


    <script src="~/assets/js/script.js"></script>

</body>
</html>

